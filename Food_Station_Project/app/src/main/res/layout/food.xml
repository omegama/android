<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="itesm.mx.food_station_project.LoginActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alimentos"
        android:id="@+id/titleDrinkText"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_weight="0.86">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Food Item 1 Layout gohan Food-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titleFoodText">

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/FoodItem1"
                    android:src="@drawable/gohan"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/FoodItem1_quantity"
                    android:text="0"
                    android:gravity="center"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_above="@+id/FoodItem1_desc"
                    android:layout_toEndOf="@+id/FoodItem1"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Gohan (arroz al vapor)"
                    android:id="@+id/FoodItem1_desc"
                    android:layout_below="@+id/FoodItem1"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Precio: $25"
                    android:id="@+id/FoodItem1_price"
                    android:layout_below="@+id/FoodItem1_desc"
                    android:layout_alignParentStart="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     +     "
                    android:id="@+id/FoodItem1_plusBtn"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     -      "
                    android:id="@+id/FoodItem1_minusBtn"
                    android:layout_below="@+id/FoodItem1_plusBtn"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <!--Food Item 2 Layout fries Food-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titleFoodText">

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/FoodItem2"
                    android:src="@drawable/fries"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/FoodItem2_quantity"
                    android:text="0"
                    android:gravity="center"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_above="@+id/FoodItem2_desc"
                    android:layout_toEndOf="@+id/FoodItem2"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Papas a la Francesa"
                    android:id="@+id/FoodItem2_desc"
                    android:layout_below="@+id/FoodItem2"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Precio: $20"
                    android:id="@+id/FoodItem2_price"
                    android:layout_below="@+id/FoodItem2_desc"
                    android:layout_alignParentStart="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     +     "
                    android:id="@+id/FoodItem2_plusBtn"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     -      "
                    android:id="@+id/FoodItem2_minusBtn"
                    android:layout_below="@+id/FoodItem2_plusBtn"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <!--Food Item 3 Layout sandwich Food-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titleFoodText">

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/FoodItem3"
                    android:src="@drawable/sandwich"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/FoodItem3_quantity"
                    android:text="0"
                    android:gravity="center"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_above="@+id/FoodItem3_desc"
                    android:layout_toEndOf="@+id/FoodItem3"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sandwich de jamon de pavo"
                    android:id="@+id/FoodItem3_desc"
                    android:layout_below="@+id/FoodItem3"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Precio: $25"
                    android:id="@+id/FoodItem3_price"
                    android:layout_below="@+id/FoodItem3_desc"
                    android:layout_alignParentStart="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     +     "
                    android:id="@+id/FoodItem3_plusBtn"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     -      "
                    android:id="@+id/FoodItem3_minusBtn"
                    android:layout_below="@+id/FoodItem3_plusBtn"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <!--Food Item 4 Layout hotdog Food-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titleFoodText">

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/FoodItem4"
                    android:src="@drawable/hotdog"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/FoodItem4_quantity"
                    android:text="0"
                    android:gravity="center"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_above="@+id/FoodItem4_desc"
                    android:layout_toEndOf="@+id/FoodItem4"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hotdog"
                    android:id="@+id/FoodItem4_desc"
                    android:layout_below="@+id/FoodItem4"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Precio: $25"
                    android:id="@+id/FoodItem4_price"
                    android:layout_below="@+id/FoodItem4_desc"
                    android:layout_alignParentStart="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     +     "
                    android:id="@+id/FoodItem4_plusBtn"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     -      "
                    android:id="@+id/FoodItem4_minusBtn"
                    android:layout_below="@+id/FoodItem4_plusBtn"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Total   "
            android:id="@+id/totalFood"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Atras   "
            android:id="@+id/backFood"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
