<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="itesm.mx.food_station_project.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bebidas"
        android:id="@+id/titleDrinkText"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="409dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Drink Item 1 Layout mountaindew Drink-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titleDrinkText">

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/DrinkItem1"
                    android:src="@drawable/mountaindew"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/DrinkItem1_quantity"
                    android:text="0"
                    android:gravity="center"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_above="@+id/DrinkItem1_desc"
                    android:layout_toEndOf="@+id/DrinkItem1"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Mountaindew 355ml  lata"
                    android:id="@+id/DrinkItem1_desc"
                    android:layout_below="@+id/DrinkItem1"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Precio: $15"
                    android:id="@+id/DrinkItem1_price"
                    android:layout_below="@+id/DrinkItem1_desc"
                    android:layout_alignParentStart="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     +     "
                    android:id="@+id/DrinkItem1_plusBtn"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     -      "
                    android:id="@+id/DrinkItem1_minusBtn"
                    android:layout_below="@+id/DrinkItem1_plusBtn"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <!--Drink Item 2 Layout cocacola lata Drink-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titleDrinkText">

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/DrinkItem2"
                    android:src="@drawable/coke"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/DrinkItem2_quantity"
                    android:text="0"
                    android:gravity="center"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_above="@+id/DrinkItem2_desc"
                    android:layout_toEndOf="@+id/DrinkItem2"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Coca Cola 355ml lata"
                    android:id="@+id/DrinkItem2_desc"
                    android:layout_below="@+id/DrinkItem2"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Precio: $10"
                    android:id="@+id/DrinkItem2_price"
                    android:layout_below="@+id/DrinkItem2_desc"
                    android:layout_alignParentStart="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     +     "
                    android:id="@+id/DrinkItem2_plusBtn"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     -      "
                    android:id="@+id/DrinkItem2_minusBtn"
                    android:layout_below="@+id/DrinkItem2_plusBtn"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <!--Drink Item 3 Layout cocacola 600ml Drink-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titleDrinkText">

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/DrinkItem3"
                    android:src="@drawable/coke600"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/DrinkItem3_quantity"
                    android:text="0"
                    android:gravity="center"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_above="@+id/DrinkItem3_desc"
                    android:layout_toEndOf="@+id/DrinkItem3"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Coca Cola de 600ml"
                    android:id="@+id/DrinkItem3_desc"
                    android:layout_below="@+id/DrinkItem3"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Precio: $12"
                    android:id="@+id/DrinkItem3_price"
                    android:layout_below="@+id/DrinkItem3_desc"
                    android:layout_alignParentStart="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     +     "
                    android:id="@+id/DrinkItem3_plusBtn"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     -      "
                    android:id="@+id/DrinkItem3_minusBtn"
                    android:layout_below="@+id/DrinkItem3_plusBtn"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <!--Drink Item 4 Layout agua Drink-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titleDrinkText">

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/DrinkItem4"
                    android:src="@drawable/water"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/DrinkItem4_quantity"
                    android:text="0"
                    android:gravity="center"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_above="@+id/DrinkItem4_desc"
                    android:layout_toEndOf="@+id/DrinkItem4"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Agua Natural"
                    android:id="@+id/DrinkItem4_desc"
                    android:layout_below="@+id/DrinkItem4"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Precio: $10"
                    android:id="@+id/DrinkItem4_price"
                    android:layout_below="@+id/DrinkItem4_desc"
                    android:layout_alignParentStart="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     +     "
                    android:id="@+id/DrinkItem4_plusBtn"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     -      "
                    android:id="@+id/DrinkItem4_minusBtn"
                    android:layout_below="@+id/DrinkItem4_plusBtn"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Total   "
            android:id="@+id/totalDrink"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Atras   "
            android:id="@+id/backDrink"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
